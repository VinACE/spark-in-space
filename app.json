{
  "name": "spark-in-space",
  "description": "spark cluster in a private space",
  "keywords": [
    "spark",
    "private-spaces",
    "dns-discovery"
  ],
  "repository": "https://github.com/heroku/spark-in-space",
  "env": {
    "SPARK_BASIC_AUTH": {
      "description": "nginx basic auth",
      "value": "spark:{PLAIN}space"
    },
    "LOG_LEVEL": {
      "description": "log4j log level for spark",
      "value":  "INFO"
    }
  },
  "formation": {
    "master": {
      "quantity": 1,
      "size": "Private-M"
    },
    "worker": {
      "quantity": 2,
      "size": "Private-L"
    },
    "web": {
      "quantity": 1,
      "size": "Private-S"
    }
  },
  "image": "heroku/jvm",
  "addons": [
    {
      "plan": "bucketeer",
      "as": "SPARK"
    }
  ],
  "buildpacks": [
    {
      "url": "http://github.com/kr/heroku-buildpack-inline.git"
    },
    {
      "url": "http://github.com/heroku/heroku-buildpack-jvm-common.git"
    }
  ]
}